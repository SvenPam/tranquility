@model IPublishedContent
@using Tranquility.Helpers
<article class="section">
    <div class="section__fact container">
        <div class="row">
            <div class="col-12">
                <span class="left">@Model.CreatorName</span><span class="right">@Model.CreateDate.Friendly()</span>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="lead"><a class="h2" href="@Model.Url">@Model.Name</a><sup><a href="@Model.Url"><span class="glyphicon glyphicon-link"></span></a></sup></h1>
                <p class="text-center"><a href="#">@Model.GetPropertyValue("topic")</a></p>
                <p class="text-muted">
                    @Model.GetPropertyValue("description")
                </p>
            </div>
        </div>
    </div>
    <div class="article-body section__content">
        @Html.GetGridHtml(Model, "content", "Bootstrap4")
    </div>
