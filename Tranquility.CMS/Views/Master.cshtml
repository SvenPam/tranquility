@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en-gb">
<head>
    @Html.Partial("Partials/_Meta", (Model.Content as IPage))
    <link href="~/a/dist/css/ste-pam.min.css" rel="stylesheet" />
    @RenderSection("styles")
    <script>
        window.lazyLoadOptions = {
            elements_selector: ".lazyload",
            class_loaded: "lazyloaded",
            class_loading: "lazyloading"
        };
    </script>
    <script async src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@10.19.0/dist/lazyload.min.js"></script>
</head>
<body>
    <nav id="siteNav" class="site-nav">
        <span class="nav-title">Site Nav</span>
        <button id="closeMobMenu" class="close-site-nav">
            <i class="hidden-lg hidden-md">
                <svg class="icon icon--menu">
                    <use xlink:href="/a/dist/sprites/sprite.svg#x"></use>
                </svg>
            </i>
        </button>
        <ul class="list list--nav">
            <li class="list__item">
                <i class="list__icon">
                    <svg class="icon icon--menu">
                        <use xlink:href="/a/dist/sprites/sprite.svg#chevron-left"></use>
                    </svg>
                </i>
                <a class="list__link" href="javascript:void(0)" onclick="history.back();">Back</a>
            </li>
            <li class="list__item">
                <i class="list__icon">
                    <svg class="icon icon--menu">
                        <use xlink:href="/a/dist/sprites/sprite.svg#home"></use>
                    </svg>
                </i>
                <a class="list__link" href="/">Home</a>
            </li>
            <li class="list__item">
                <i class="list__icon">
                    <svg class="icon icon--menu">
                        <use xlink:href="/a/dist/sprites/sprite.svg#person"></use>
                    </svg>
                </i>
                <a class="list__link" href="/about">About</a>
            </li>
            <li class="list__item">
                <i class="list__icon">
                    <svg class="icon icon--menu">
                        <use xlink:href="/a/dist/sprites/sprite.svg#pencil"></use>
                    </svg>
                </i>
                <a class="list__link" href="/blog">Blog</a>
            </li>
            <li class="list__item">
                <i class="list__icon">
                    <svg class="icon icon--menu">
                        <use xlink:href="/a/dist/sprites/sprite.svg#code"></use>
                    </svg>
                </i>
                <a class="list__link" href="/work">Work</a>
            </li>
            <li class="list__item">
                <i class="list__icon">
                    <svg class="icon icon--menu">
                        <use xlink:href="/a/dist/sprites/sprite.svg#chat"></use>
                    </svg>
                </i>
                <a class="list__link" href="/contact">Contact</a>
            </li>
        </ul>
    </nav>
    <main>
        @RenderBody()
    </main>
    @Html.Partial("Partials/_Footer")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-45636226-1', 'ste-pam.com');
        ga('send', 'pageview');

        document.getElementById('mobileMenu').addEventListener('click', function (ev) {
            document.getElementById('mobileMenu').style.display = "none";
            document.getElementById('siteNav').classList.add('active');
            //$('.site-nav').addClass('active')
            document.body.className += 'menu-open';
            return false;
        }, false);

        document.getElementById('closeMobMenu').addEventListener('click', function (ev) {

            document.getElementById('mobileMenu').style.display = "";
            document.getElementById('siteNav').classList.remove('active');
            document.body.className = '';
            return false;
        }, false);

        </script>
</body>
</html>