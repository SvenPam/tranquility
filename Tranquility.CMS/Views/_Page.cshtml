@inherits UmbracoViewPage<Tranquility.Models.Content.IPage>
@{
    Layout = "Master.cshtml";
}
@section styles {

    @if (Model.Image != null)
    {
        <style>
            .hero {
     background-image: url('@(Model.Image.Src  + Model.Image.GetCropUrl("Hero - XS", true, true))');
        }

        @@media (min-width: 540px) {
            .hero {
                background-image: url('@(Model.Image.Src + Model.Image.GetCropUrl("Hero - S", true, true))');
            }
        }

        @@media (min-width: 720px) {
            .hero {
                            background-image: url('@(Model.Image.Src  + Model.Image.GetCropUrl("Hero - M", true, true))');
            }
        }

        @@media (min-width: 960px) {
            .hero {
                            background-image: url('@(Model.Image.Src  + Model.Image.GetCropUrl("Hero - L", true, true))');\
            }
        }

        @@media (min-width: 1140px) {
            .hero {
                background-image: url('@(Model.Image.Src  + Model.Image.GetCropUrl("Hero - XL", true, true))');
            }
}
        </style>
    }

}

<section class="hero">
    <div class="container">
        <h1 class="hero__title">@(string.IsNullOrWhiteSpace(Model.AltTitle) ? Model.Name : Model.AltTitle)</h1>
        @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <h3 class="hero__subtitle">@Model.Subtitle</h3>
        }
    </div>
</section>
<div class="sections">
    @RenderBody()
</div>